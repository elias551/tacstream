doctype html
html
    head
        title= "TACstream"
        link(rel='stylesheet',href='//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
        link(rel='stylesheet',href='//netdna.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
    body
        .container
            .jumbotron.text-center
                h1
                    span.fa.fa-lock
                    span Node authentication
                if displayName 
                    p Logged user: #{ displayName }
                    a.btn.btn-default(href='/home')
                        span.fa.fa-user
                        span &nbsp;Profile
                    a.btn.btn-default(href='/logout')
                        span.fa.fa-user
                        span &nbsp;Logout
                else
                    p user not logged in
                    a.btn.btn-default(href='/login')
                        span.fa.fa-user
                        span &nbsp;login
                    a.btn.btn-default(href='/signup')
                        span.fa.fa-user
                        span &nbsp;Signup