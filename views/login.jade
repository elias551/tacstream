doctype html
html
    head
        title= "TACstream - Login"    
        include ./includes/head.jade
    body
        .container
            .col-sm-6.col-sm-offset-3
                h1
                    span.fa.fa-sign-in
                    span &nbsp;Login
                if message.length > 0
                    .alert.alert-danger= message

                form(action='/login',method='post')
                    .form-group
                        label Email
                        input.form-control(type='text', name='email')
                    .form-group
                        label Password
                        input.form-control(type='password',name='password')
                    button.btn.btn-warning.btn-lg(type='submit') Login

                    hr
                    a.btn.btn-primary.btn-lg(href='/auth/facebook')
                        span.fa.fa-facebook
                        span &nbsp;Facebook
                    a.btn.btn-danger.btn-lg(href='/auth/google')
                        span.fa.fa-google
                        span &nbsp;Google
                            
                    hr

                    p 
                        | Need an account ? 
                        a(href='/signup') Signup
                        |!
                    p 
                        | Or go&nbsp;
                        a(href='/') home
                        |.